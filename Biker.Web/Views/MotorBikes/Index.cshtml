@model IEnumerable<Biker.Web.Data.Entities.MotorBike.MotorBikeEntity>

@{
    ViewData["Title"] = "MotorBikes";
}

<h2 class="text-center">Motorbikes</h2>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReadnNameandCillinder)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Cylinder)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.BikeMaker.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikeType.Name)
            </th>
            <th>
                # Models
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReadnNameandCillinder)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Cylinder)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.BikeMaker.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BikeType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotorBikeSpares.Count)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a>
                    <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/MotorBikes/Delete/' + item_to_delete;
            });
        });
    </script>
}

