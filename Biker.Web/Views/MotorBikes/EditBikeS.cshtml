@model Biker.Web.Models.MotorBike.AddMotorBikeSpareViewModel

@{
    ViewData["Title"] = "Modify Motorbike for Spare";
}

    <h2>Modify Motobike for Spare</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBikeS" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MotorbikeId" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />


            <partial name="_MotorbikeSpare" />

            <div class="form-group">
                <a asp-action="Details" asp-route-id="@Model.MotorbikeId" class="btn btn-default">Back</a>
                <input type="submit" name="EditBikeS" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)"
                 alt="Image"
                 style="width:auto;height:auto;max-width: 100%; height: auto;"  class="img-responsive img-thumbnail"/>
        }
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
