@model Biker.Web.Models.TypeMakerViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Motorbike Type</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditType" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImageUrl" />
            <input type="hidden" asp-for="MakerId" />
            <input type="hidden" asp-for="Id" />


            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <select asp-for="TypeId" asp-items="Model.Types" class="form-control"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Details" asp-route-id="@Model.MakerId" class="btn btn-default">Back</a>
                <input type="submit" name="EditType" value="Update" class="btn btn-primary" />

            </div>
        </form>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)"
                 alt="Image"
                 style="width:auto;height:auto;max-width: 100%; height: auto;"  class="img-responsive " />
        }
        else
        {
            <label class="control-label">No image</label>
        }
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
