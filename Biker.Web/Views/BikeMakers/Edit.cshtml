@model Biker.Web.Data.Entities.BikeMakerEntity

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>BikeMakerEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <partial name="_AddBikeMaker" />

            <div class="form-group">
                <a asp-action="Index" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i>Back</a>
                <input type="submit" name="Save" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)"
                 alt="Image"
                 style="width:400px;height:400px;max-width: 100%; height: auto;" class="img-responsive img-thumbnail" />
        }
        else
        {
            <label  class="control-label">No image</label>
        }
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
